{
  "description": "Aplicacion para la gestion de cheques",
  "author": "Cristian Calvo",
  "name": "gestor-cheques",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "start": "next start",
    "electron-build": "electron-builder",
    "lint": "next lint"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@prisma/client": "^6.3.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "next": "15.1.6",
    "prisma": "^6.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sqlite3": "^5.1.7",
    "wait-on": "^8.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5","electron": "^34.3.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.gestorcheques.app",
    "productName": "Gestor de Cheques",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "main": "electron/main.js"
}
